<minimc
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="minimc.xsd">
<general>
  <particles>neutron</particles>
  <histories>1000</histories>
  <threads>2</threads>
  <chunksize>500</chunksize>
</general>
<nuclides>
  <continuous>
    <nuclide name="pure absorber" awr="1.0">
      <neutron>
        <total temperature="293.15" file="uniform-2.000b.hdf5"/>
        <capture temperature="293.15" file="uniform-1.000b.hdf5"/>
        <scatter>
          <xs temperature="293.15" file="uniform-1.000b.hdf5"/>
        </scatter>
      </neutron>
    </nuclide>
  </continuous>
</nuclides>
<materials>
  <material name="pure absorber" aden="1.0">
    <nuclide name="pure absorber" afrac="1.0"/>
  </material>
</materials>
<surfaces>
  <sphere name="sphere">
    <center x="0" y="0" z="0" />
    <radius r="1" />
  </sphere>
</surfaces>
<cells>
  <cell name="pure absorber" material="pure absorber">
    <surface name="sphere" sense="-1"/>
  </cell>
  <void>
    <surface name="sphere" sense="+1"/>
  </void>
</cells>
<temperature>
  <constant c="293.15"/>
</temperature>
<problemtype>
  <fixedsource>
    <position>
      <constant x="0" y="0" z="0" />
    </position>
    <direction>
      <isotropic/>
    </direction>
    <energy>
      <constant energy="1"/>
    </energy>
    <particletype>
      <constant type="neutron"/>
    </particletype>
  </fixedsource>
</problemtype>
<estimators>
  <current name="leakage" surface="sphere">
    <perturbations>
      <sensitivity to="totalxs"/>
    </perturbations>
  </current>
</estimators>
<perturbations>
  <totalxs name="totalxs" nuclide="pure absorber"/>
</perturbations>
</minimc>
