<minimc
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="minimc.xsd">
<general>
  <particles>neutron</particles>
</general>
<nuclides>
  <multigroup groups="2">
    <nuclide name="hydrogen">
      <neutron>
        <capture>0 1</capture>
        <scatter>
          0 0
          1 0
        </scatter>
      </neutron>
    </nuclide>
    <nuclide name="oxygen">
      <neutron>
        <capture>0.5 0.5</capture>
        <scatter>
          0.5 0.0
          0.5 0.5
        </scatter>
      </neutron>
    </nuclide>
    <nuclide name="inconsistent capture">
      <neutron>
        <capture>0 1 1</capture>
        <scatter>
          0 0
          1 0
        </scatter>
      </neutron>
    </nuclide>
    <nuclide name="inconsistent scatter">
      <neutron>
        <capture>0 1 1</capture>
        <scatter>
          0 0
          1 0 0
        </scatter>
      </neutron>
    </nuclide>
    <nuclide name="wrong particle">
      <photon>
        <capture></capture>
        <scatter>
        </scatter>
      </photon>
    </nuclide>
  </multigroup>
</nuclides>
<materials>
  <material name="water" aden="2">
    <nuclide name="hydrogen" afrac="0.67"/>
    <nuclide name="oxygen" afrac="0.33"/>
  </material>
  <material name="hydrogen" aden="1">
    <nuclide name="hydrogen" afrac="0.1"/>
  </material>
  <material name="oxygen" aden="1">
    <nuclide name="oxygen" afrac="0.1"/>
  </material>
</materials>
<surfaces>
  <sphere name="inner sphere">
    <center x="0" y="0" z="0"/>
    <radius r="1"/>
  </sphere>
  <sphere name="middle sphere">
    <center x="0" y="0" z="0"/>
    <radius r="2"/>
  </sphere>
  <sphere name="outer sphere">
    <center x="0" y="0" z="0"/>
    <radius r="3"/>
  </sphere>
</surfaces>
<cells>
  <cell name="pit" material="hydrogen">
    <surface name="inner sphere" sense="-1"/>
  </cell>
  <cell name="inner shell" material="water">
    <surface name="inner sphere" sense="+1"/>
    <surface name="middle sphere" sense="-1"/>
  </cell>
  <cell name="outer shell" material="hydrogen">
    <surface name="middle sphere" sense="+1"/>
    <surface name="outer sphere" sense="-1"/>
  </cell>
</cells>
</minimc>
