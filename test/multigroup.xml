<minimc
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="minimc.xsd">
<general>
  <particles>neutron</particles>
  <histories>100000</histories>
  <threads>2</threads>
  <chunksize>1000</chunksize>
</general>
<nuclides>
  <multigroup groups="2">
    <nuclide name="hydrogen">
      <neutron>
        <capture>1 0</capture>
        <scatter>
          0 1
          0 1
        </scatter>
        <fission>
          <xs>1 0</xs>
          <nubar>1.1 0</nubar>
          <chi>
            1.0 0.5
            0.0 0.5
          </chi>
        </fission>
      </neutron>
    </nuclide>
  </multigroup>
</nuclides>
<materials>
  <material name="hydrogen" aden="1">
    <nuclide name="hydrogen" afrac="0.1"/>
  </material>
</materials>
<surfaces>
  <sphere name="sphere">
    <center x="0" y="0" z="0"/>
    <radius r="1"/>
  </sphere>
</surfaces>
<cells>
  <cell name="sphere" material="hydrogen">
    <surface name="sphere" sense="-1"/>
  </cell>
  <void>
    <surface name="sphere" sense="+1"/>
  </void>
</cells>
<problemtype>
  <fixedsource>
    <position>
      <constant x="0" y="0" z="0"/>
    </position>
    <direction>
      <isotropic/>
    </direction>
    <energy>
      <constant energy="1"/>
    </energy>
    <particletype>
      <constant type="neutron"/>
    </particletype>
  </fixedsource>
</problemtype>
</minimc>
